sources = [
    "register_types.cpp",
#    "scr/helpers.cpp",
    "scr/sql_conn.cpp",
    "scr/mysql.cpp",

]


mysql_env.Prepend(CPPPATH=["/media/cleber/DATA/COMPILATIONS/dependencies/boost/libs/mysql/include/boost"]) 

